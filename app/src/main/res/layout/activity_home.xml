<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HomeActivity"
    android:background="#ffdeeaff">

    <TextView android:text="@string/hello_world" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="inherit"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="26sp"
        android:typeface="normal"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView"
        android:layout_gravity="top"
        android:textColor="#ffff5f00" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom">

        <Button
            android:layout_width="500px"
            android:layout_height="100px"
            android:text="Spotify Streamer"
            android:id="@+id/spotifyButton"
            android:layout_gravity="center_horizontal"
            android:background="#ffffb31e"
            android:layout_marginTop="7dp"
            android:onClick="launchSpotifyStreamer" />

        <Button
            android:layout_width="500px"
            android:layout_height="100px"
            android:text="Scores App"
            android:id="@+id/scoresAppButton"
            android:layout_gravity="center_horizontal"
            android:background="#ffffb31e"
            android:layout_marginTop="7dp"
            android:onClick="launchScoresApp" />

        <Button
            android:layout_width="500px"
            android:layout_height="100px"
            android:text="Library App"
            android:id="@+id/libraryAppButton"
            android:layout_gravity="center_horizontal"
            android:background="#ffffb31e"
            android:layout_marginTop="7dp"
            android:onClick="launchLibraryApp" />

        <Button
            android:layout_width="500px"
            android:layout_height="100px"
            android:text="Build It Bigger"
            android:id="@+id/buildItBiggerButton"
            android:layout_gravity="center_horizontal"
            android:background="#ffffb31e"
            android:layout_marginTop="7dp"
            android:onClick="launchBuildItBigger" />

        <Button
            android:layout_width="500px"
            android:layout_height="100px"
            android:text="XYZ Reader"
            android:id="@+id/xyzReaderButton"
            android:layout_gravity="center_horizontal"
            android:background="#ffffb31e"
            android:layout_marginTop="7dp"
            android:onClick="launchXYZReader" />

        <Button
            android:layout_width="500px"
            android:layout_height="100px"
            android:text="CAPSTONE: My Own App"
            android:id="@+id/capstoneButton"
            android:layout_gravity="center_horizontal"
            android:background="#ffff0001"
            android:textColor="#FFFFFF"
            android:layout_marginTop="7dp"
            android:onClick="launchCapstone" />
    </LinearLayout>

</RelativeLayout>
